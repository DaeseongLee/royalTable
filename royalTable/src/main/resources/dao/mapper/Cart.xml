<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.mapper.CartMapper">
	<select id="list" parameterType="map" resultType="Cart">
		select no, menuNo, menuName, quantity, price, content, img imgurl from cart
		<if test="no != null">
			where no = #{no}
		</if>
	</select>
</mapper>